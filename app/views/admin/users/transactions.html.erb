<div>
  <%= link_to "Back",admin_users_path, class: "btn" %>
</div>
<h1> Transactions</h1>
<table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
  <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
    <tr>
      <th scope="col" class="px-6 py-3">
        Date
      </th>
      <th scope="col" class="px-6 py-3">
        User
      </th>
      <th scope="col" class="px-6 py-3">
        Stock Name
      </th>
      <th scope="col" class="px-6 py-3">
        Qty
      </th>
      <th scope="col" class="px-6 py-3">
        Price
      </th>
      <th scope="col" class="px-6 py-3">
        Total
      </th>
      <th scope="col" class="px-6 py-3">
        Type
      </th>
    </tr>
  </thead>
  <tbody>
    <% @trans.map do |u| %>
      <tr class="odd:bg-white odd:dark:bg-gray-900  even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700 border-gray-200">
        <td class="px-6 py-4">
          <%= u.created_at %>
        </td>
        <td class="px-6 py-4">
          <% user = @users.find_by(id: u.user_id)  %>
          <%= user&.email || "Unknown" %>
        </td>
        <td class="px-6 py-4">
          <%= u.stock_name %>
        </td>
        <td class="px-6 py-4">
          <%= u.quantity %>
        </td>
        <td class="px-6 py-4">
          <%= u.stock_price_per_share %>
        </td>
        <td class="px-6 py-4">
          <%= u.total_price %>
        </td>
        <td class="px-6 py-4">
          <%= u.transaction_type %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>